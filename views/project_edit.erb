<h1>Update the <%=@projects.title() %> project </h1>

<form action="/projects/<%= @projects.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="title">Rename your project:</label>
  <input id="title" name="title" type="text">

  <button type="submit">Update Project</button>
</form>

<form action="/projects/<%= @projects.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Project</button>
</form>


<ul>
<% if @volunteer.any?() %>
<ul>
<% @volunteer.each do |v| %>
  <h3><%= v.name()%></h3>
<% end %>

<% else %>
<p>There are no volunteers on this project at this time.</p>
<% end %>
</ul>

<h3>Add a volunteer to <%= @projects.title() %> </h3>

<form action="/projects/<%= @project.id %>/volunteers" method="post">
  <input id="project_id" name="project_id" type="hidden"_ value="<%= @projects.id() %>">

  <label for="name">Add a volunteer:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update Volunteer</button>
</form>
